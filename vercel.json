{
  "version": 2,
  "builds": [
    {
      "src": "app.js", // Your backend server file
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "10mb" 
      }
    },
    {
      "src": "build", // Assuming your React build output is in the 'build' directory
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}
